import java.util.*;
public class Main{
    public static int recursionSum(int a){
        if(a==1){
            return 1;
        }
        return recursionSum(a-1)+a;
    }
    public static void main(String args[]){
        Scanner sc=new Scanner(System.in);
        int a=sc.nextInt();
        int ans=recursionSum(a);
        System.out.println(ans);
    }
}